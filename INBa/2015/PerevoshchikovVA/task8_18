import random
slova= ("Анаграмма","Программист","Игрок","Отгадать","Доработка","Получение","Подсказки",)
slovo= random.choice(slova)
CS=slovo
idk="Не знаю"
podskazka=slovo[0]+slovo[1]+slovo[2]+slovo[3]
for i in slova:
    shuffle = list(i)
    random.shuffle(shuffle)
    inp = input('Какое слово загадано? {}\n'.format(''.join(shuffle)))
    print("отгадали" if inp == i else 'не отгадали')
    ##осталось вставить подсказки